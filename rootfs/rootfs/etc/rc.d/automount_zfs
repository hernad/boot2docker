#!/bin/sh

. /etc/green_common

log_msg "zfs_automount START"

if ! ( /sbin/lsmod | grep -q nfs )
then

   /sbin/modprobe zfs >> $LOG_FILE 2>&1

   for i in 1 2 3 4
   do
     echo "/dev/zfs try: $i"
     if [ -e /dev/zfs ] ; then
        break
     else
        sleep 1
     fi
   done

fi

mkdir -p /home
mkdir -p /opt
zpool import green >> $LOG_FILE 2>&1

log_msg "mounting zfs blok device /dev/zvol/green/docker_vol"
mkdir -p /var/lib/docker
[ -e /dev/zvol/green/docker_vol ] && mount /dev/zvol/green/docker_vol /var/lib/docker

if [ -e /dev/zvol/green/swap ] ; then
  log_msg "zvol/green/swap ON"
  mkswap /dev/zvol/green/swap
  swapon  /dev/zvol/green/swap >> $LOG_FILE
  swapon -a >> $LOG_FILE
if

zpool status -v >> $LOG_FILE 2>&1
zfs list >> $LOG_FILE 2>&1
log_msg "zfs_automount END"
