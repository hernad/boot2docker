. /etc/green_common
. /etc/init.d/tc-functions

set_path_ld_library
export PATH
export LD_LIBRARY_PATH

log_msg "START: $0"

while ! curl -s --unix-socket /var/run/docker.sock http:/_ping | grep -q OK ; do
#while ! ps ax | grep dockerd | grep -q -v grep; do
   log_msg "waiting for docker daemon"
   sleep 1
done

# docker_run "-p 80:80 -d nginx"
docker_run() {
  (docker run $1 2>&1) >> $LOG_FILE
}
